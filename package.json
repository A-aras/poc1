{
  "name": "react-vite-monorepo",
  "version": "1.0.0",
  "description": "React Webpack Module Federation Micro-frontend Architecture",
  "type": "module",
  "workspaces": [
    "packages/common",
    "packages/shell",
    "packages/app1",
    "packages/app2",
    "packages/app3"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "dev:shell": "npm run dev --workspace packages/shell",
    "dev:app1": "npm run dev --workspace packages/app1",
    "dev:app2": "npm run dev --workspace packages/app2",
    "dev:app3": "npm run dev --workspace packages/app3",
    "dev:parallel": "bash scripts/run-all.sh",
    "build": "npm run build --workspaces",
    "build:shell": "npm run build --workspace packages/shell",
    "preview": "npm run preview --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "install:all": "npm install"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/webpack": "^5.28.5",
    "@types/webpack-dev-server": "^4.7.2",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "html-webpack-plugin": "^5.6.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "style-loader": "^3.3.0",
    "css-loader": "^6.8.0",
    "typescript": "^5.3.0",
    "eslint": "^8.54.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
